import Layout from "../../layouts/Layout.astro";
import '@fontsource-variable/syne';
---

<Layout title="Proyectos - Administración de servidores.">
  <main class="flex flex-col items-center min-w-full pt-12 xsm:pt-20 gap-14 px-4">
    <NameProject 
    title="Administración de servidores" 
    tech1="JavaScript" 
    tech2="HTML" 
    tech3="CSS" 
    rol="Desarrollador Frontend"
    />
